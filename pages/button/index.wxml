<b-button bind:click="handleClick" inline type="success">行内按钮</b-button>
<b-button bind:click="handleClick">默认按钮</b-button>
<b-button bind:click="handleClick" type="error" long="true">联通两边按钮</b-button>
<b-button bind:click="handleClick" type="primary">Primary</b-button>
<b-button bind:click="handleClick" type="ghost">Ghost</b-button>
