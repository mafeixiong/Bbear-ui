.b-btn {
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  border-radius: 2px;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  background: #f7f7f7;
  color: #495060;
  margin: 10px;
}

.b-btn::after {
  border: 0;
}

.b-btn-long {
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}

.b-btn-hover {
  opacity: 0.9;
}

.b-btn-large {
  height: 48px;
  line-height: 48px;
}

.b-btn-small {
  height: 40px;
  line-height: 40px;
}
