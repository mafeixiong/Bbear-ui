.b-btn-primary {
  color: #fff;
  background: #2d8cf0;
}

.b-btn-ghost {
  color: #fff;
  background: #fff;
  color: #495060;
}

.b-btn-success {
  color: #fff;
  background: #19be6b;
}

.b-btn-warning {
  color: #fff;
  background: #f90;
}

.b-btn-error {
  color: #fff;
  background: #ed3f14;
}

.b-btn-info {
  color: #fff;
  background: #2db7f5;
}

.b-btn-inline {
  display: inline-block;
}

.b-btn-disabled {
  color: #bbbec4 !important;
  background: #f7f7f7 !important;
}

.b-btn-loading {
  opacity: 0.6;
}

.b-btn-loading-inner {
  display: inline-block;
  margin-right: 12px;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  background: 0 0;
  border-radius: 50%;
  border: 2px solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}
