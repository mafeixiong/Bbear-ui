.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  transition: .6s;
  animation: show .6s;
  animation-fill-mode: forwards;
  background: #000;
}

@keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: .6;
  }
}

@keyframes hide {
  0% {
    opacity: .6;
  }

  100% {
    opacity: 0;
  }
}
